<div class="text-center">
<h1>Eat Da BURGER!</h1>
<img src="/assets/img/burger.jpg" id="cartoon_burger" style="height: 200px; width: 200px;">
</div>
<div class="row justify-content-center">
    <div class="col-5">
      <h5 class="text-center">Burgers Created</h5>
       <ul>
        {{#each burger}}
          {{#unless devoured}}
            <li>
              {{burger_name}}
              <button type="button" class="btn btn-light devour float-right" data-id="{{id}}"> Devour IT!</button>
	          </li> 
              
          {{/unless}}
        {{/each}}
      </ul></div>
    <div class="col-5">
      <h5 class="text-center">Burgers Devoured</h5>
     <ul>
        {{#each burger}}
          {{#if devoured}}
           <li>
              {{burger_name}}
              <button type="button" class="btn btn-danger float-right"> Devoured!</button>
	          </li> 
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
<div class="text-center">
<h2>ADD A BURGER</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca"></label>
    <input type="text" id="ca" name="name" placeholder="Enter in a NEW burger name" style="width:210px; height:50px">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

  </div>
